<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.pb.app.caloriecalculator.ui.fragments.FragmentSettings" android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:paddingLeft="20dp" android:layout_marginTop="6dp">
                <TextView
                        android:text="Name user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/name_user"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Material.Body2"
                        android:paddingBottom="5dp" android:textColor="@android:color/black" android:textSize="14sp"
                        android:paddingTop="15dp"/>
                <TextView
                        android:text="email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/email_user"
                        android:layout_weight="0.57" android:paddingTop="7dp"
                        android:textColor="#BDBDBD"
                        android:textSize="12sp"/>
            </LinearLayout>
            <Button
                    android:text="Log out"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" android:id="@+id/button_log_out" android:layout_weight="1"
                    android:textAllCaps="false" android:textColor="#BDBDBD"
                    android:layout_gravity="center" android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="2dp" android:layout_weight="1" android:layout_marginTop="20dp"
                android:layout_gravity="center">
            <ImageView
                    android:layout_width="350dp"
                    android:layout_height="match_parent" app:srcCompat="@color/cardview_shadow_start_color"
                    android:id="@+id/imageView9" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
